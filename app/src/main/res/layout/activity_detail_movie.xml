<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovie">

    <ImageView
        android:id="@+id/gambar_detil"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="#fff"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvjuduldetil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/juduldetil"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/gambar_detil"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_rilis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/rilisdetil"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvjuduldetil"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_rilis_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="mm-dd-yyyy"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/tv_rilis"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ratingdetil"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_rilis_detail"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/tv_rating_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Rating Film"
        android:textAlignment="center"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/tv_rating"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/sinopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sinopsisdetil"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_rating_detail"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/sinopsis_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/loremipsum"
        android:textColor="#000"
        android:textAlignment="center"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/sinopsis"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>